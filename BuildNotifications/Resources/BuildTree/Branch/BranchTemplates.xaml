<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModelTree="clr-namespace:BuildNotifications.ViewModel.Tree"
                    xmlns:icons="clr-namespace:BuildNotifications.Resources.Icons">

    <DataTemplate x:Key="BranchGroupNodeTemplate" DataType="{x:Type viewModelTree:BranchGroupNodeViewModel}">
        <DockPanel HorizontalAlignment="Left">
            <icons:IconBatch Foreground="{DynamicResource Green}"
                             Width="{DynamicResource Block}" Height="{DynamicResource Block}"
                             Margin="{DynamicResource BlockQuarterRight}" Type="Branch" DockPanel.Dock="Left" />
            <TextBlock Text="{Binding BranchName}" FontSize="{DynamicResource BlockFont}"
                       Foreground="{DynamicResource Foreground1}" UseLayoutRounding="True" />
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>