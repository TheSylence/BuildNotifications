<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:viewModelTree="clr-namespace:BuildNotifications.ViewModel.Tree"
                    xmlns:icons="clr-namespace:BuildNotifications.Resources.Icons">

    <DataTemplate x:Key="SourceGroupNodeTemplate" DataType="{x:Type viewModelTree:SourceGroupNodeViewModel}">
        <DockPanel>
            <icons:IconBatch Foreground="{DynamicResource Red}" Type="Connection" DockPanel.Dock="Left" Margin="{DynamicResource BlockQuarterRight}"/>
            <TextBlock Text="GitHub" FontSize="{DynamicResource BlockFont}" Foreground="{DynamicResource Foreground1}"
                   HorizontalAlignment="Left" UseLayoutRounding="True" FontWeight="Regular" TextTrimming="CharacterEllipsis"/>
        </DockPanel>
    </DataTemplate>

</ResourceDictionary>