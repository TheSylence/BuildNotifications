<UserControl x:Class="BuildNotifications.Views.Sight.BaseSightView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:viewModel="clr-namespace:BuildNotifications.ViewModel.Sight"
             xmlns:icons="clr-namespace:BuildNotifications.Resources.Icons"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance d:Type={x:Type viewModel:BaseSightViewModel}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <icons:IconToggleButton
        Width="{StaticResource BlockDouble}"
        Height="{StaticResource BlockDouble}" HorizontalAlignment="Center"
        VerticalAlignment="Center" IsChecked="{Binding IsEnabled}"
        Foreground="{DynamicResource Background3}"
        ToolTip="{Binding ToolTip}"
        Icon="{Binding Icon}" />
</UserControl>
