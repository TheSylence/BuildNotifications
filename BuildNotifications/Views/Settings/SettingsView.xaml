<UserControl x:Class="BuildNotifications.Views.Settings.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:BuildNotifications.Views.Settings"
             xmlns:resourcesSettings="clr-namespace:BuildNotifications.Resources.Settings"
             xmlns:viewModelSettings="clr-namespace:BuildNotifications.ViewModel.Settings"
             mc:Ignorable="d" d:DataContext="{d:DesignInstance Type={x:Type viewModelSettings:SettingsViewModel}}"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary Source="../../Resources/Settings/EditableConfigResources.xaml"/>
    </UserControl.Resources>
    <ScrollViewer HorizontalScrollBarVisibility="Disabled">
        <ItemsControl ItemsSource="{Binding Configs}" Margin="{StaticResource BlockHalfXOnlyMargin}"
                      ItemTemplateSelector="{x:Static resourcesSettings:EditableConfigTemplateSelector.Instance}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </ScrollViewer>
</UserControl>